							CornerRadius="{Binding $parent[Slider].Bounds.Width, Converter={StaticResource HeightToCornerRadiusConverter}}"
							Background="Red" />
					<ContentPresenter Name="bubble" Width="0" Height="0"
									  IsHitTestVisible="False"
									  ClipToBounds="False"
									  RenderTransformOrigin="0.5,0.5" />
				</Grid>
			</ControlTemplate>
		</Setter>
